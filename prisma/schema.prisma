generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model PublishedProduct {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  sku         String   @unique
  amount      Int
  price       Float
  publishCode String
}

model StockProduct {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  updatedAt DateTime @default(now())
  sku       String   @unique
  stock     Int
  type      String
}

model StockRuleProduct {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  updatedAt   DateTime @default(now())
  sku         String   @unique
  publishCode String
  stockRule   Int
  price       Float
  category    String
}

model MercadoLivreIntegration {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt             DateTime @default(now())
  name                  String   @unique
  clientId              Int
  secretKey             String
  uri                   String
  appToken              String
  refreshToken          String
  refreshTokenUpdatedAt DateTime
}
