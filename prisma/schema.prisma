generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model StockProduct {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  sku         String
  stock       Int
  stockDumpId String    @db.ObjectId
  stockDump   StockDump @relation(fields: [stockDumpId], references: [id], onDelete: Cascade)
}

model StockDump {
  id        String         @id @default(auto()) @map("_id") @db.ObjectId
  author    String
  createdAt DateTime       @default(now())
  products  StockProduct[]
}

model StockRuleTable {
  id               String             @id @default(auto()) @map("_id") @db.ObjectId
  title            String             @unique
  createdAt        DateTime           @default(now()) @updatedAt
  StockRuleProduct StockRuleProduct[]
}

model StockRuleProduct {
  id               String         @id @default(auto()) @map("_id") @db.ObjectId
  sku              String
  publishCode      String
  stockRule        Int
  price            Float
  StockRuleTableId String         @db.ObjectId
  StockRuleTable   StockRuleTable @relation(fields: [StockRuleTableId], references: [id], onDelete: Cascade)
}
